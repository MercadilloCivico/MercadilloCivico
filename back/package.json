{
  "name": "mercadillo-civico-back",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "start": "node ./src/index.js production",
    "dev": "nodemon ./src/index.js development",
    "prisma": "npm run prisma:generate:dev && npm run prisma:push:dev",
    "prisma:generate:dev": "dotenv -e .env.development -- npx prisma generate",
    "prisma:push:dev": "dotenv -e .env.development -- npx prisma db push",
    "prisma:generate:prod": "dotenv -e .env.production -- npx prisma generate",
    "prisma:push:prod": "dotenv -e .env.production -- npx prisma db push",
    "lint": "eslint ./src --ext .js"
  },
  "dependencies": {
    "@prisma/client": "^5.9.1",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mercadillo-civico": "file:..",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "passport": "^0.6.0",
    "passport-google-oauth": "^2.0.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^5.9.1",
    "qrcode": "^1.5.3",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "dotenv-cli": "^7.3.0",
    "nodemon": "^3.0.2"
  }
}
